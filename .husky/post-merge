changed_files="$(git diff-tree -r --name-only --no-commit-id ORIG_HEAD HEAD)"

check_run() {
  echo "$changed_files" | grep --quiet "$1" && eval "$2"
}

# If package.json changed, remind to install dependencies
check_run "package.json" "echo 'ğŸ“¦ package.json changed. Run \"npm install\" to update dependencies.'"

# If database schema changed, remind to run migrations
check_run "prisma/schema.prisma" "echo 'ğŸ—„ï¸ Database schema changed. Run \"npm run db:migrate\" to update your database.'"

# If .env.example changed, remind to check environment variables
check_run ".env.example" "echo 'ğŸ” .env.example changed. Check if you need to update your .env.local file.'"
